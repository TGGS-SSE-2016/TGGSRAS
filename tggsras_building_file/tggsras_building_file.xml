<openerp>
    <data>
      <record model="ir.actions.act_window" id="tggsras_building_file_start">
        <field name="name">TGGS RAS Building File</field>
        <field name="res_model">tggsras.building.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Upload Building File here :)
            </p>
        </field>
      </record>

      <record model="ir.ui.view" id="tggsras_building_file_tree">
          <field name="name">tggsras.building.file.tree</field>
          <field name="model">tggsras.building.file</field>
          <field name="arch" type="xml">
            <tree string="File List">
              <field name="name"/>
              <field name="filedata" filename="name"/>
              <button type="object" string="Delete File" name="deleteFile"/>
            </tree>
          </field>
      </record>
      <record model="ir.ui.view" id="tggsras_building_file_form">
          <field name="name">tggsras.building.file.form</field>
          <field name="model">tggsras.building.file</field>
          <field name="arch" type="xml">
            <form string="File Form">
              <sheet>
                <group string="Add file">
                  <field name="name" invisible="1"/>
                  <field name="filedata" filename="name"/>
                </group>
              </sheet>
            </form>
          </field>
      </record>

    </data>
</openerp>
