<openerp>
    <data>
        <record model="ir.actions.act_window" id="tggsras_building_list">
            <field name="name">Building Cost</field>
            <field name="res_model">tggsras.building</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first the bill right here :)
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="tggsras_building_form">
            <field name="name">tggsras.building.form</field>
            <field name="model">tggsras.building</field>
            <field name="arch" type="xml">
                <form string="Building Cost Form">
                    <header>
                        <button name="send" type="workflow" string="Send Invoice" states="invoice" class=""/>
                        <button name="paid" type="workflow" string="Customer Paid" states="send" class=""/>
                        <button name="bill" type="workflow" string="Receive Bill" states="paid" class=""/>
                        <button name="close" type="workflow" string="Close" states="bill" class=""/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="company"/>
                            <field name="invoicedate"/>
                            <field name="billdate"/>
                            <field name="cost"/>
                        </group>
                        <notebook>
                          <page string="Signed Invoice">
                            <field name="signedinvoice_filename" invisible="1"/>
                            <field name="signedinvoice" filename="signedinvoice_filename"/>
                          </page>
                          <page string="Signed Bill">
                            <field name="signed_bill_filename" invisible="1"/>
                            <field name="signedbill" filename="signed_bill_filename"/>
                          </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                      <field name="message_follower_ids" widget="mail_followers"/>
                      <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tggsras_building_tree">
            <field name="name">tggsras.building.tree</field>
            <field name="model">tggsras.building</field>
            <field name="arch" type="xml">
                <tree string="Building Cost List">
                    <field name="name"/>
                    <field name="company"/>
                    <field name="billdate"/>
                    <field name="invoicemonth"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
